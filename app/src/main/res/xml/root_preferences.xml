<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Counting">

        <EditTextPreference
            app:key="increase"
            app:title="Increase amount"
            app:defaultValue="1"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Appearance">

        <SwitchPreferenceCompat
            app:key="theme_switch"
            app:title="Enable dark theme" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="volumeButtons"
            app:title="Use volume buttons as + and -" />

    </PreferenceCategory>

</PreferenceScreen>